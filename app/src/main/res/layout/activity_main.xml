<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/darkcirle">

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/songs_textview"
        style="@style/mainText"
        android:layout_marginRight="24dp"
        android:layout_marginTop="40dp"
        android:drawableTop="@drawable/songs"
        android:text="@string/songs"
        app:layout_constraintEnd_toEndOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/artist_textview"
        style="@style/mainText"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="40dp"
        android:drawableTop="@drawable/microphone"
        android:text="@string/artist"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/albums_textview"
        style="@style/mainText"
        android:layout_marginRight="24dp"
        android:layout_marginTop="40dp"
        android:drawableTop="@drawable/album"
        android:text="@string/albums"
        app:layout_constraintEnd_toEndOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/songs_textview" />

    <TextView
        android:id="@+id/playlist_textview"
        style="@style/mainText"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="40dp"
        android:drawableTop="@drawable/playlist"
        android:text="@string/playlists"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/artist_textview" />

    <TextView
        android:id="@+id/nowplaying_textview"
        style="@style/mainText"
        android:layout_marginTop="4dp"
        android:drawableTop="@drawable/ic_play_circle_filled_black_24dp"
        android:text="@string/nowplaying"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playlist_textview" />

</android.support.constraint.ConstraintLayout>